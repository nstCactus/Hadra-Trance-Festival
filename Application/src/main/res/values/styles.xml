<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- This is our main ActionBarSherlock theme -->
	<style name="AppTheme" parent="Theme.Sherlock">
		<item name="actionBarStyle">@style/ActionBar</item>
		<item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:textColor">@color/brand_yellow</item>
		<item name="android:windowBackground">@color/brand_black</item>
        <item name="vpiTabPageIndicatorStyle">@style/TabStyle</item>
    </style>

    <!-- Theme for LinupUpActivity -->
    <style name="Theme.LineUp" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

	<!-- "Implementation" of our ABS custom theme -->
	<style name="ActionBar" parent="Widget.Sherlock.ActionBar">
		<item name="titleTextStyle">@style/TitleText</item>
		<item name="android:titleTextStyle">@style/TitleText</item>
		<item name="background">@drawable/actionbar_background</item>
		<item name="android:background">@drawable/actionbar_background</item>
	</style>

    <!-- ActionBar title style -->
    <style name="TitleText">
        <item name="android:textColor">@color/brand_yellow</item>
        <item name="android:textSize">17dip</item>
    </style>

	<!-- "Implementation" of VPI theme. We just set the text size and color. -->
	<style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
		<item name="android:textColor">@color/brand_orange</item>
		<item name="android:background">@drawable/tab_indicator_selector</item>
	</style>

    <style name="TabStyle" parent="Widget.TabPageIndicator">
        <item name="android:textColor">#FF33AA33</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

	<style name="FullscreenActivity" parent="Theme.Sherlock.NoActionBar">
		<item name="android:windowBackground">@color/brand_black</item>
	</style>

	<style name="imageButtons">
		<item name="android:background">#00FFFFFF</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="smallButtons" parent="imageButtons">
		<item name="android:layout_margin">5dp</item>
	</style>

	<style name="bigButtons" parent="imageButtons">
		<item name="android:layout_margin">10dp</item>
	</style>

	<style name="now_playing">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textColor">@color/brand_orange</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="now_playing.artist" parent="now_playing">
		<item name="android:textColor">@color/brand_yellow</item>
		<item name="android:textSize">25sp</item>
	</style>

	<style name="artist_photo">
		<item name="android:layout_width">@dimen/artist_photo</item>
		<item name="android:layout_height">@dimen/artist_photo</item>
		<item name="android:padding">2dp</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:background">@drawable/yellow_border</item>
	</style>

    <style name="artistName">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/brand_orange</item>
    </style>

    <style name="artistLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/brand_yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="artistBio">
        <item name="android:textColor">@color/brand_yellow</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
