<resources
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

	<style name="Theme.Htf2014.Custom" parent="Theme.Htf2014.ActionBar">
		<item name="android:textColor">@color/brand_yellow</item>
        <item name="android:windowBackground">@drawable/background_blur</item>
    </style>

    <style name="HomeTheme" parent="Theme.Htf2014.Custom">
        <item name="android:windowBackground">@drawable/background</item>
    </style>



    <!-- Styles for various elements -->
	<style name="imageButtons">
		<item name="android:background">#00FFFFFF</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="smallButtons" parent="imageButtons">
		<item name="android:layout_margin">5dp</item>
	</style>

	<style name="bigButtons" parent="imageButtons">
		<item name="android:layout_margin">10dp</item>
	</style>

	<style name="now_playing">
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:textColor">@color/brand_orange</item>
		<item name="android:textSize">17sp</item>
        <item name="customTypeface">fonts/ArialRoundedMTBold.ttf</item>
	</style>

	<style name="now_playing.artist" parent="now_playing">
		<item name="android:textColor">@color/brand_yellow</item>
		<item name="android:textSize">25sp</item>
	</style>

    <style name="artist">

    </style>

	<style name="artist.photo">
		<item name="android:layout_width">@dimen/artist_photo</item>
		<item name="android:layout_height">@dimen/artist_photo</item>
		<item name="android:padding">2dp</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:background">@drawable/yellow_border</item>
	</style>

    <style name="artist.name">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/brand_orange</item>
        <item name="customTypeface">fonts/ArialRoundedMTBold.ttf</item>
    </style>

    <style name="artist.label">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/brand_yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="artistBio">
        <item name="android:textColor">@color/brand_yellow</item>
        <item name="android:textSize">18sp</item>
    </style>

	<style name="MediaController">
		<item name="android:background">@color/brand_yellow</item>
	</style>

	<style name="MediaController.Buttons">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">@dimen/media_controller_buttons_padding</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textOff" />
		<item name="android:textOn" />
	</style>
</resources>
