<resources>
	    <!-- Notification bar event text -->
	<style name="NotificationText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

	<!-- Notification bar actions -->
	<style name="NotificationAction">
        <item name="android:layout_width">@dimen/notification_mediaplayer_action_width</item>
        <item name="android:layout_height">@dimen/notification_mediaplayer_action_height</item>
        <item name="android:gravity">center|right</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/notification_mediaplayer_action_padding</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="NotificationAction.Previous" parent="@style/NotificationAction">
        <item name="android:src">@drawable/ic_media_previous</item>
        <item name="android:visibility">gone</item>
        <item name="android:contentDescription">@string/button_prev</item>
    </style>

    <style name="NotificationAction.Play" parent="@style/NotificationAction">
        <item name="android:src">@drawable/ic_media_play</item>
        <item name="android:contentDescription">@string/button_play</item>
    </style>

    <style name="NotificationAction.Next" parent="@style/NotificationAction">
        <item name="android:src">@drawable/ic_media_next</item>
        <item name="android:contentDescription">@string/button_next</item>
    </style>

    <style name="NotificationAction.Collapse" parent="@style/NotificationAction">
        <item name="android:src">@drawable/ic_notify_close</item>
    </style>
</resources>
