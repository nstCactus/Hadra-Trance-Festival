<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
		>

	<ImageView
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:id="@+id/artist_photo"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:src="@drawable/no_image"
			android:layout_marginBottom="5dp"
			android:scaleType="centerCrop"/>

	<TextView
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:text="Artist name"
			android:id="@+id/label"
			android:layout_toRightOf="@+id/artist_photo"
			android:layout_alignTop="@+id/artist_photo"
			android:textSize="20dp"
			android:singleLine="true"
			android:paddingLeft="10dp"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:layout_toLeftOf="@+id/start_hour" />

	<TextView
			android:layout_width="match_parent"
			android:layout_height="24dp"
			android:text="DJ"
			android:id="@+id/set_type"
			android:layout_alignBottom="@+id/artist_photo"
			android:layout_toRightOf="@+id/artist_photo"
			android:singleLine="true"
			android:paddingLeft="10dp"
			android:paddingBottom="5dp"
			android:layout_toLeftOf="@+id/end_hour" />

	<TextView
			android:layout_width="65dp"
			android:layout_height="32dp"
			android:text="10:45"
			android:id="@+id/start_hour"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="false"
			android:layout_alignParentStart="false"
			android:gravity="center_vertical|right"
			android:singleLine="true"
			android:layout_marginRight="5dp" />

	<TextView
			android:layout_width="65dp"
			android:layout_height="32dp"
			android:text="12:15 pm"
			android:id="@+id/end_hour"
			android:layout_below="@+id/start_hour"
			android:layout_alignLeft="@+id/start_hour"
			android:layout_alignParentEnd="false"
			android:layout_alignParentStart="false"
			android:gravity="center_vertical|right"
			android:singleLine="true"
			android:layout_marginRight="5dp" />

</RelativeLayout>
