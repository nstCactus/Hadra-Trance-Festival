<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".activity.DonateActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/donation_text"
                    android:id="@+id/textView"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="$1"
                    android:id="@+id/amount"
                    android:layout_below="@+id/textView"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"/>

            <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/seekBar"
                    android:progress="80"
                    android:secondaryProgress="980"
                    android:max="980"
                    android:layout_below="@+id/amount"
                    android:layout_alignLeft="@+id/textView"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/donate_button"
                    android:onClick="onDonatePressed"
                    android:background="@drawable/button_paypal"
                    android:singleLine="false"
                    android:textColor="#000"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/seekBar"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donate_joke"
                    android:id="@+id/donate_joke"
                    android:layout_below="@+id/donate_button"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="300dp"
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentLeft="true"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/donate_joke"
                    />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
